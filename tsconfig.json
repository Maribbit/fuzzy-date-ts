{
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "./dist/cjs",
      "declaration": true,
      "declarationDir": "./dist/cjs",
      "moduleResolution": "node",
      "target": "ES2015",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}